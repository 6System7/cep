<!DOCTYPE html>
<html>

<head>
    <script src="lib/jquery.min.js"></script>
    <link rel="stylesheet" type="text/css" href="lib/bootstrap.min.css">
    <script type="text/javascript" src="lib/bootstrap.min.js"></script>
    <link rel="stylesheet" type="text/css" href="styles/addPal.css">
    <script type="text/javascript" src="scripts/addPal.js"></script>
</head>

<body>
    <div class="container-fluid">
        <br>
        <form>
            <div id="palStore" style="display:none;"></div>
            <div class="form-group">
                <label for="firstName">First Name:</label>
                <input class="form-control" id="firstName" placeholder="Enter First Name" required="true">
            </div>
            <div class="form-group">
                <label for="lastName">Last Name:</label>
                <input class="form-control" id="lastName" placeholder="Enter Last Name" required="true">
            </div>
            <div class="form-group">
                <label for="email">Email:</label>
                <input type="email" class="form-control" id="email" placeholder="Enter email" required="true">
            </div>
            <div class="form-group">
                <label for="dob">DOB: (yyyy/mm/dd)</label>
                <input class="form-control" id="dob" placeholder="Enter DOB" required="true">
            </div>
            <div class="form-group">
                <label for="gender">Gender:</label>
                <input class="form-control" id="gender" placeholder="Enter Gender" required="true">
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label><input id="chkDisability" type="checkbox" value="">Has disability</label>
                </div>
                <div class="checkbox">
                    <label><input id="chkExtraHelp" type="checkbox" value="">Extra help</label>
                </div>
            </div>

            <button type="submit" class="btn btn-default" id="addPalBtn" onclick="submitFunc()">Submit</button>
            <button type="button" class="btn btn-warning" id="deletePalBtn" data-toggle="modal" data-target="#confirmationModal" style="float: right"> Delete</button>

            <!-- TODO delete button css -->
            <div id="confirmationModal" class="modal fade" role="disalog">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h4> Are you sure you want to delete this PAL?</h4>
                        </div>
                        <div class="modal-body">
                            <button type="button" class="btn btn-default" id="confirmDeleteBtn" style="float:left" onclick="deletePalFunc()"> Yes, delete this pal</button>

                            <button type="button" class="btn btn-default" id="cancelDeleteBtn" style="float:right" data-dismiss="modal"> Cancel</button>
                            <br>
                            <br>
                        </div>
                    </div>

                </div>
            </div>
        </form>
    </div>
</body>

</html>
